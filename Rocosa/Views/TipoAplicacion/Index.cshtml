@model IEnumerable<Rocosa_Modelos.TipoAplicacion>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h1 class="text-primary">Lista Tipos de Aplicaciones</h1>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="TipoAplicacion" asp-action="Crear" class="btn btn-outline-primary">
                <i class="fa-solid fa-plus"></i> Nuevo Tipo Aplicación 
            </a>
        </div>
    </div>
    <br />

    @if(Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th width="80%">@item.NombreTipAplicacion</th>
                        <th class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="TipoAplicacion" asp-action="Editar" asp-route-id="@item.Id" class="btn btn-primary mx-2">
                                    <i class="fa-regular fa-pen-to-square"></i>
                                </a>
                                <a asp-controller="TipoAplicacion" asp-action="Eliminar" asp-route-id="@item.Id" class="btn btn-danger mx-2">
                                    <i class="fa-solid fa-trash"></i>
                                </a>
                            </div>
                        </th>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>NO HAY REGISTROS</p>
    }
</div>


