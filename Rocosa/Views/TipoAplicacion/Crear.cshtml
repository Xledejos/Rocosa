@model Rocosa_Modelos.TipoAplicacion

@{
    ViewData["Title"] = "Crear";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" asp-action="Crear">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">Nuevo Tipo de Aplicación</h2>
        </div>

        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <label asp-for="NombreTipAplicacion" class="form-label">Nombre</label>
                    <input asp-for="NombreTipAplicacion" class="form-control" />
                    <span asp-validation-for="NombreTipAplicacion" class="text-danger"></span>
                </div>
            </div>
            <br />

            <div class="d-grid gap-2 d-md-block">
                <button type="submit" class="btn btn-outline-primary">Crear</button>
                <a asp-controller="TipoAplicacion" asp-action="Index" class="btn btn-outline-success">Regresar</a>
            </div>
        </div>
    </div>
</form>
