@model Rocosa_Modelos.Producto
@using Rocosa_Utilidades

@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" asp-action="Eliminar">
    <input asp-for="Id" hidden />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="border p-3">
        <div class="row">
            <h2 class="text-info">Eliminar Producto</h2>
        </div>

        <div class="row">
            <div class="col-6">
                <div class="container">
                    <div class="row">
                        <div class="col-md-8">
                            <label asp-for="NombreProducto" class="form-label">Nombre Producto</label>
                            <input asp-for="NombreProducto" disabled class="form-control" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-8">
                            <label asp-for="Precio" class="form-label">Precio</label>
                            <input asp-for="Precio" disabled class="form-control" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-8">
                            <label asp-for="DescripcionCorta" class="form-label">Descripcion Corta</label>
                            <input asp-for="DescripcionCorta" disabled class="form-control" />
                        </div>
                    </div>
                    <div class="row" hidden>
                        <div class="col-md-8">
                            <label asp-for="ImagenUrl" class="form-label">Imagen</label>
                            <input asp-for="ImagenUrl" class="form-control" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-8">
                            <label asp-for="CategoriaId" class="form-label">Imagen</label>
                            <input asp-for="CategoriaId" hidden class="form-control" />
                            <input asp-for="Categoria.NombreCategoria" disabled class="form-control" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-8">
                            <label asp-for="TipoAplicacionId" class="form-label">Tipo de Aplicación</label>
                            <input asp-for="TipoAplicacionId" hidden class="form-control" />
                            <input asp-for="TipoAplicacion.NombreTipAplicacion" disabled class="form-control" />
                        </div>
                    </div>
                    <br />

                    <div class="d-grid gap-2 d-md-block">
                        <button type="submit" class="btn btn-outline-danger">Eliminar</button>
                        <a asp-controller="Producto" asp-action="Index" class="btn btn-outline-success">Regresar</a>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @if (Model.Id != 0)
                {
                    <img src="@WC.ImagenRuta@Model.ImagenUrl" style="width:100%" />
                }
            </div>
        </div>
    </div>

   
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }  
}
